@{
    ViewData["Title"] = "Borrower Page";
    Layout = "_LayoutBorrower";
}

<h2>History Loan</h2>
<table class="table table-stripped" id="historyLoanTable">
    <thead>
        <tr>
            <th>Jumlah Pinjaman</th>
            <th>Bungga</th>
            <th>Durasi</th>
            <th>Status Pinjaman</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!-- Modal View Repayment -->
<div class="modal fade" id="monthlyRepaymentModal" tabindex="-1" role="dialog" aria-labelledby="monthlyRepaymentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="monthlyRepaymentModalLabel">Monthly Repayments</h5>
            </div>
            <div class="modal-body">
                <form id="monthlyRepaymentModal">
                    <table class="table table-striped table-hover table-custom mb-0">
                        <thead>
                            <tr>
                                <th>Month</th>
                                <th>Amount</th>
                                <th>Paid</th>
                            </tr>
                        </thead>
                        <tbody id="monthlyRepaymentRows">
                        </tbody>
                    </table>
                </form>
            </div>
            <div class="modal-footer d-flex justify-content-between align-items-center">
                <div>
                    <button type="button" class="btn btn-primary" onClick="submitRepayment()">Submit Payment</button>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    <script src="~/js/borrower.js" asp-append-version="true"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
}